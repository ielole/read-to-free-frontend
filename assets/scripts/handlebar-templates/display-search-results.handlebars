{{#each books as |book|}}
<div>
  <hr>
  <div class="book-cover">
  <h2><small>{{book.title}}
    <br>
    by
    <br>
    {{book.author_first_name}} {{book.author_last_name}} </small></h2>
  </div>
  <hr>

  <form class="add-a-review">
    <h4>Add {{book.title}} to your Bookshelf by writing a Review.</h4>
    <div class="form-group">
      <input type="hidden" class="form-control" id="book-id" name="review[book_id]" value={{book.id}}>
    </div>
    <div class="form-group">
      <label for="book-comment">Comments</label>
      <input type="text" class="form-control" id="book-comment" name="review[comment]" required placeholder="Comment">
    </div>
    <div class="form-group">
      <label for="book-rating">Book Rating</label>
      <input type="number" min="0" max="50" step="5" class="form-control" id="book-rating" name="review[rating]" required placeholder="Rate This Book">
    </div>
    <button type="submit" class="btn btn-secondary">Submit</button>
  </form>
  <button class="hide-search-results">
      Hide Search Results
  </button>
</div>

{{/each}}
